<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_scanner">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.bigyoshi.qrhunt.bottom_navigation.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_leaderBoard"
        android:name="com.bigyoshi.qrhunt.bottom_navigation.leader_board.LeaderBoardFragment"
        android:label="@string/title_leaderBoard"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.bigyoshi.qrhunt.qr.FragmentScanner"
        android:label="Scanner"
        tools:layout="@layout/scanner_fragment">

        <argument
            android:name="playerId"
            app:argType="string"
            android:defaultValue="0"/>
    </fragment>
</navigation>