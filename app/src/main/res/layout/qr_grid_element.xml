<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/qr_grid_image_view_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rec_button_take_photo"
        android:backgroundTint="@color/transparent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:srcCompat="@drawable/ic_image_gallery_new"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints"
        app:shapeAppearanceOverlay="@style/ImageView.Corner"/>

    <TextView
        android:id="@+id/qr_grid_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/qr_grid_image_view_two"
        android:text="SCORE"
        android:textSize="@dimen/text_size"
        android:textAlignment="center"
        android:textColor="@color/accent_blue_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>