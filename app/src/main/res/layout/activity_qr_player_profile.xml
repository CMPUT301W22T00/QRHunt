<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:padding="@dimen/extra_large_padding"
    tools:context=".QRPlayerProfile">


    <ImageButton
        android:id="@+id/qr_profile_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleQRProfile"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:fontFamily="@font/quicksand"
        android:text="QR Profile"
        android:textAlignment="center"
        android:textColor="@color/main_blue"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/qr_profile_pfp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pfp_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_profile_back_button">

        <TextView
            android:id="@+id/textQRValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="XX"
            android:textColor="@color/accent_blue_light"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="201dp"
            android:layout_height="21dp"
            android:layout_marginLeft="@dimen/large_padding"
            android:layout_marginTop="@dimen/large_padding"
            android:fontFamily="@font/quicksand"
            android:text="(Longitude, Latitude)"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textQRValue" />

        <ImageView
            android:id="@+id/qr_profile_bkg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:background="@drawable/rec_frame_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textScans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/large_padding"
            android:fontFamily="@font/quicksand"
            android:text="Scans: XX"
            android:textColor="@color/accent_blue_light"
            android:textSize="@dimen/text_size"
            app:layout_constraintBaseline_toBaselineOf="@id/textLocation"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/qr_profile_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/ic_image_holder"
            android:elevation="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textLocation" />


        <TextView
            android:id="@+id/titleUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_padding"
            android:fontFamily="@font/asap"
            android:text="User's Username"
            android:textColor="@color/accent_blue_light"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qr_profile_image" />


        <TextView
            android:id="@+id/textCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:background="@drawable/rec_add_comment"
            android:fontFamily="@font/asap"
            android:padding="@dimen/padding"
            android:text="This will be the user's caption"
            android:textColor="@color/main_off_white_blue_light"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleUserName" />

        <TextView
            android:id="@+id/titleComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:padding="@dimen/padding"
            android:text="Comments"
            android:textColor="@color/main_off_white_blue_light"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textCaption" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/large_padding"
            android:layout_marginRight="@dimen/large_padding"
            android:background="@drawable/rec_divider"
            app:layout_constraintTop_toBottomOf="@id/titleComments" />

        <EditText
            android:id="@+id/editTextAddComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_add_comment"
            android:fontFamily="@font/asap"
            android:hint="Add a comment..."
            android:padding="@dimen/padding"
            android:textColor="@color/main_off_white_blue_light"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <ListView
            android:id="@+id/listComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_padding"
            android:layout_marginRight="@dimen/large_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextAddComment" />


        <!--
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="260dp"
            android:layout_height="289dp"
            android:src="@drawable/ic_image_gallery"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="206dp" />
        -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>