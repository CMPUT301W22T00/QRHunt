<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context=".QRPlayerProfile">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_back"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="22dp" />

    <TextView
        android:id="@+id/titleQRProfile"
        android:layout_width="191dp"
        android:layout_height="40dp"
        android:text="QR Profile"
        android:textSize="26dp"
        android:textColor="@color/main_blue"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="22dp" />


    <TextView
        android:id="@+id/textQRValue"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:text="XX"
        android:textSize="30dp"
        android:textColor="@color/accent_blue_light"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="190dp"
        android:layout_height="24dp"
        android:text="(Longitude, Latitude)"
        android:textSize="20dp"
        android:textColor="@color/main_blue"
        android:fontFamily="@font/quicksand"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="118dp" />


    <TextView
        android:id="@+id/textScans"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:text="Scans: XX"
        android:textSize="16dp"
        android:textColor="@color/accent_blue_light"
        android:fontFamily="@font/quicksand"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="65dp" />


    <TextView
        android:id="@+id/titleUserName"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:text="User's Username"
        android:textSize="14dp"
        android:textColor="@color/accent_blue_light"
        android:fontFamily="@font/asap"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="419dp" />


    <TextView
        android:id="@+id/textCaption"
        android:layout_width="256dp"
        android:layout_height="29dp"
        android:text="This will be the user's caption"
        android:textSize="12dp"
        android:textColor="@color/main_off_white_blue_light"
        android:fontFamily="@font/asap"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="473dp" />


    <TextView
        android:id="@+id/titleComments"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:text="Comments"
        android:textSize="13dp"
        android:textColor="@color/main_off_white_blue_light"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="535dp" />


    <TextView
        android:id="@+id/editTextAddComment"
        android:layout_width="263dp"
        android:layout_height="24dp"
        android:text="Add a comment..."
        android:textSize="12dp"
        android:textColor="@color/main_off_white_blue_light"
        android:fontFamily="@font/asap"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="586dp" />


    <ListView
        android:id="@+id/listComments"
        android:layout_width="309dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="51dp" />


</androidx.constraintlayout.widget.ConstraintLayout>