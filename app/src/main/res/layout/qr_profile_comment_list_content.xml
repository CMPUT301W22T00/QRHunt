<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/qr_profile_comment_list_view_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/asap"
        android:text="Player_Username"
        android:textColor="@color/main_blue"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/qr_profile_comment_list_view_two"
        app:layout_constraintEnd_toEndOf="@+id/qr_profile_comment_list_view_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qr_profile_comment_list_view_two"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="652dp"
        android:fontFamily="@font/asap"
        android:text="Player comment..."
        android:textColor="@color/main_off_white_blue_light"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_profile_comment_list_view_one" />

</androidx.constraintlayout.widget.ConstraintLayout>