<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_list_item"
    android:orientation="horizontal"
    android:padding="@dimen/padding"
    >


    <TextView
        android:id="@+id/textRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="#"
        android:textSize="@dimen/title_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/asap"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />



    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="username"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="@dimen/subtitle_size"
        android:textColor="@color/accent_grey_blue_dark"
        android:layout_toRightOf="@id/textRank"
        android:layout_centerVertical="true"

        />



    <TextView
        android:id="@+id/textHighestUnique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="Uq"
        android:textSize="@dimen/subtitle_size"
        android:textColor="@color/accent_grey_blue_dark"
        app:layout_constraintWidth_percent=".21"
        android:fontFamily="@font/asap"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/textDivider"
        android:layout_centerVertical="true"

        />


    <TextView
        android:id="@+id/textDivider"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:text="|"
        android:textAlignment="center"
        android:textSize="@dimen/statement_text"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/textScans"
        android:layout_centerVertical="true"

        />



    <TextView
        android:id="@+id/textScans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:text="scans"
        android:textAlignment="center"
        android:textSize="@dimen/subtitle_size"
        android:textColor="@color/accent_grey_blue_dark"
        android:fontFamily="@font/asap"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/textScore"
        android:layout_centerVertical="true"
        />


    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:text="score"
        android:textColor="@color/accent_grey_blue_dark"
        android:textSize="@dimen/subtitle_size"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        />


</RelativeLayout>
