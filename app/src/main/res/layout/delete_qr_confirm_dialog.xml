<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding"
    android:background="@drawable/rec_fragment_bg">

    <TextView
        android:id="@+id/delete_qr_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_qr_profile"
        android:fontFamily="@font/asap"
        android:textStyle="bold"
        android:textColor="@color/main_red_midtone"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/padding"
        android:padding="@dimen/padding"
        />

    <View
        android:layout_width="@dimen/statement_padding"
        android:layout_height="@dimen/padding"
        app:layout_constraintLeft_toRightOf="@id/delete_qr_dialog_title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/delete_qr_dialog_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="@string/cancel"
        android:fontFamily="@font/asap"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/delete_qr_dialog_title"
        app:layout_constraintRight_toLeftOf="@id/delete_qr_dialog_confirm_button"
        />

    <Button
        android:id="@+id/delete_qr_dialog_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/asap"
        android:textStyle="bold"

        android:text="@string/ok"
        android:textColor="@color/main_red_midtone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_qr_dialog_title" />

</androidx.constraintlayout.widget.ConstraintLayout>