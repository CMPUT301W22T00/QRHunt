<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_off_white_blue_light"
    tools:context=".QRProfileAfterScan">


    <TextView
        android:layout_width="323dp"
        android:layout_height="639dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:alpha="0.25"
        android:background="@drawable/rec_frame_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_width="272dp"
        android:layout_height="319dp"
        android:background="@drawable/rec_image_holder_bg"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="206dp" />


    <TextView
        android:layout_width="403dp"
        android:layout_height="357dp"
        android:background="@mipmap/ic_image_holder"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="194dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_back"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/titleQRProfile"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:fontFamily="@font/quicksand"
        android:text="QR Profile"
        android:textAlignment="center"
        android:textColor="@color/main_blue"
        android:textSize="26dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="16dp" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pfp_light"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="13dp" />

    <TextView
        android:id="@+id/textQRValue"
        android:layout_width="59dp"
        android:layout_height="41dp"
        android:fontFamily="@font/quicksand"
        android:text="XX"
        android:textAlignment="center"
        android:textColor="@color/accent_blue_light"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="201dp"
        android:layout_height="21dp"
        android:fontFamily="@font/quicksand"
        android:text="(Longitude, Latitude)"
        android:textColor="@color/main_blue"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="169dp" />


    <TextView
        android:id="@+id/textScans"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:fontFamily="@font/quicksand"
        android:text="Scans: XX"
        android:textAlignment="textEnd"
        android:textColor="@color/accent_blue_light"
        android:textSize="16dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/titleUserName"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:fontFamily="@font/asap"
        android:text="User's Username"
        android:textColor="@color/accent_blue_light"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="442dp" />


    <TextView
        android:id="@+id/textCaption"
        android:layout_width="258dp"
        android:layout_height="24dp"
        android:alpha="0.3"
        android:background="@drawable/rec_add_comment"
        android:fontFamily="@font/asap"
        android:text="This will be the user's caption"
        android:textColor="@color/main_off_white_blue_light"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="543dp" />

    <TextView
        android:layout_width="272dp"
        android:layout_height="0.5dp"
        android:background="@drawable/rec_divider"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="598dp" />

    <TextView
        android:id="@+id/titleComments"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:fontFamily="@font/quicksand"
        android:text="Comments"
        android:textColor="@color/main_off_white_blue_light"
        android:textSize="13dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="567dp" />

    <TextView
        android:id="@+id/editTextAddComment"
        android:layout_width="263dp"
        android:layout_height="24dp"
        android:fontFamily="@font/asap"
        android:text="Add a comment..."
        android:textColor="@color/main_off_white_blue_light"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="606dp" />


</FrameLayout>