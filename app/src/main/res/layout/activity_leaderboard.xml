<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context=".Leaderboard">


    <TextView
        android:id="@+id/textTitleLeaderboard"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/quicksand"
        android:text="Leaderboard"
        android:textAlignment="center"
        android:textColor="@color/main_blue"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textTopTwo"
        android:layout_width="366dp"
        android:layout_height="186dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="29dp"
        android:alpha="0.75"
        android:background="@drawable/rec_rank_panel_bg"
        android:text="rank panel 2 and 3"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitleLeaderboard" />

    <TextView
        android:id="@+id/textRankOne"
        android:layout_width="156dp"
        android:layout_height="205dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rec_rank_panel_bg"
        android:gravity="center"
        android:text="Rank One"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitleLeaderboard" />

    <Button
        android:id="@+id/my_rank"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rec_button_rank"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="My Rank"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/accent_blue_light"
        android:foreground="@color/accent_blue_light"
        app:layout_constraintBottom_toTopOf="@+id/titleColNames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRankOne"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/titleColNames"
        android:layout_width="391dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/quicksand"
        android:text="Column Titles"
        android:textColor="@color/accent_blue_light"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="364dp" />


    <ListView
        android:id="@+id/rankings"
        android:layout_width="391dp"
        android:layout_height="338dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleColNames"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
